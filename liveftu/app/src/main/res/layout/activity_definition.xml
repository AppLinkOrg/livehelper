<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp25"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp21"
                android:layout_height="@dimen/dp21"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@mipmap/fanhui" />
            <LinearLayout
                android:layout_width="@dimen/dp154"
                android:layout_height="@dimen/dp87"
                android:gravity="center"
                android:background="@drawable/definition_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp20"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高清1"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"
                    />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp27"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp133"
                    android:layout_height="@dimen/dp108"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@mipmap/tv" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp131"
                    android:layout_height="@dimen/dp36"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@mipmap/sjx" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>