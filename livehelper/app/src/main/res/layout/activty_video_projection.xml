<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="#ffffffff"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp18"
            android:layout_marginLeft="@dimen/dp10"
            android:src="@mipmap/return_ba" />
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"

            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频放映"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp20"
        >

        <ImageView
            android:layout_width="@dimen/dp290"
            android:layout_height="@dimen/dp200"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/video_o" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="视频正在放映中..."
            android:textColor="#ff999999"
            android:textSize="16sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp40"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mwdsafs214135123.mp4"
            android:textColor="#ff999999"
            android:textSize="13sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp64"
        >
        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp22"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/subtract" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/dp26"
            android:layout_height="@dimen/dp26"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/v_left" />


        <ImageView
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/v_bofang" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/bofang_v_s" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/dp26"
            android:layout_height="@dimen/dp26"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/v_right" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp22"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/add" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp40"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:background="@drawable/button_c"
            android:gravity="center"
            android:text="结束播放"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>