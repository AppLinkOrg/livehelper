<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#ffda4e44" />
            <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="1dp" android:top="1dp" android:left="1dp" android:right="1dp"> <!--设置只有底部有边框-->
        <shape>
            <solid android:color="#ffffffff" />
            <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" />
        </shape>
    </item>

</layer-list>